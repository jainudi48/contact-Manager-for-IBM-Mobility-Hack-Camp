<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:weightSum="10"
    android:baselineAligned="false">

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_marginTop="6sp"
        android:layout_marginBottom="6sp">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/contact_item_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/content_description_contact_image_icon"
                android:layout_marginRight="6sp"
                android:src="@drawable/contacts"
                />
        </FrameLayout>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:orientation="vertical"
        android:layout_marginTop="6sp">
        <TextView
            android:id="@+id/contact_first_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginBottom="6sp"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#000000"
            android:text="@string/contact_name_text"/>
        <TextView
            android:id="@+id/contact_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="6sp"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="#373636"
            android:text="@string/contact_number_text"/>
    </LinearLayout>

</LinearLayout>